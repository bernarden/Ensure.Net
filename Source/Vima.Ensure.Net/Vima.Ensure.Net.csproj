<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Version>3.0.0</Version>
    <FileVersion>3.0.0</FileVersion>
    <Authors>Victor Usoltsev</Authors>
    <Description>Ensure.Net is a null checker library for .NET</Description>
    <Copyright>Copyright © Victor Usoltsev 2017</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl>https://raw.githubusercontent.com/bernarden/Ensure.Net/master/Resources/NugetIcon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/bernarden/Ensure.Net</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ensure argument not null</PackageTags>
    <PackageProjectUrl>https://github.com/bernarden/Ensure.Net</PackageProjectUrl>
    <Company>Vima</Company>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Product>Ensure.Net</Product>
    <PackageId>Ensure.Net</PackageId>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
    <None Include="..\..\Resources\NugetIcon.png" Pack="true" PackagePath="\$(PackageIcon)" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Vima.Ensure.Net.Tests" />
  </ItemGroup>
</Project>